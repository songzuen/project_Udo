package com.wad.udo.rv.domain;

public class CalDate {

	private int date;
	private String day;
		
	public int getDate() {
		return date;
	}

	public void setDate(int date) {
		this.date = date;
	}

	public String getDay() {
		return day;
	}

	public void setDay(int day) {
		this.day = stringDay(day);
	}

	public String stringDay(int day) {
		
		String sDay=null;
		
		switch (day) {
			case 1:
				sDay = "Sun";
			break;
				
			case 2:
				sDay = "Mon";
			break;
			
			case 3:
				sDay = "Tue";
			break;
			
			case 4:
				sDay = "Wed";
			break;
			
			case 5:
				sDay = "Thu";
			break;
			
			case 6:
				sDay = "Fri";
			break;
			
			case 7:
				sDay = "Sat";
			break;
		}
		return sDay;
		}

	public CalDate(int date, String day) {
		this.date = date;
		this.day = day;
	}

	public CalDate(int date, int day) {
		this.date = date;
		this.day = stringDay(day);
	}
	
	public CalDate() {

	}

	@Override
	public String toString() {
		return date + day;
	}
	
}