package com.wad.udo.rv.controller;

import java.util.ArrayList;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.wad.udo.rv.domain.CalDate;
import com.wad.udo.rv.service.DateService;

@RestController("date/getWeek")
public class DateController {

	@Autowired
	private DateService service;
	
	@CrossOrigin
	@GetMapping
	public ArrayList<CalDate> getWeek() {
		
		ArrayList<CalDate> weekList = service.getWeek();
		
		return weekList;
	}
}
